{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 23",
    "_version": "23.0.0",

    "compilerOptions": {
        "lib": ["ES2024", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "target": "ES2024",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "Node",

        "outDir": "./dist",
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true
    },

    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
